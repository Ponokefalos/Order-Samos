<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#560b0b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RandomChoice" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitlosProsforas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Titlos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/ibtnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFagito"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:background="@null"
                android:src="@drawable/callbtn" />

            <TextView
                android:id="@+id/tvCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ibtnCall"
                android:layout_alignTop="@+id/ibtnCall"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Call"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/ibtnRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitlosProsforas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp"
                android:background="@null"
                android:src="@drawable/radious" />

            <TextView
                android:id="@+id/tvFagito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOnomaMagaziou"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ibtnRandom"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="Random"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvOnomaMagaziou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ibtnRandom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvProvalomeniTixaiaEpilogi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFagito"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textColor="#c0c0c0"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
