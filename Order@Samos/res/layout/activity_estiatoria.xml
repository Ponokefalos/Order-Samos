<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9c1616"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Estiatoria" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1141dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtnFame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/fame"
                android:tag="Fame" />

            <ImageButton
                android:id="@+id/ibtnEvris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/evris" />

            <ImageButton
                android:id="@+id/ibtnKoutala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="58dp"
                android:background="@null"
                android:src="@drawable/koutala" />

            <ImageButton
                android:id="@+id/ibtnGiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/giro" />

            <ImageButton
                android:id="@+id/ibtnNostos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="56dp"
                android:background="@null"
                android:src="@drawable/nostos" />

            <ImageButton
                android:id="@+id/ibtnTaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/taz" />

            <ImageButton
                android:id="@+id/ibtnMegaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"
                android:background="@null"
                android:src="@drawable/megaro" />

            <ImageButton
                android:id="@+id/ibtnKouzina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:background="@null"
                android:src="@drawable/kouzina" />
			
            <ImageButton
                android:id="@+id/ibtnVakxos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:background="@null"
                android:src="@drawable/vakxos" />

             <ImageButton
                 android:id="@+id/ibtnSweet"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="48dp"
                 android:background="@null"
                 android:src="@drawable/sweet" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>